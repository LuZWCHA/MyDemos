<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lu.indexpagedemo.view.simpleviews.OrdinaryUserDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/line"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageResource="@drawable/details_background"
                app:placeholderImage="@color/colorInActive" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/original_user_details_aver"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:actualImageResource="@drawable/ic_designer_2"
                app:placeholderImage="@color/colorWarmgray"
                app:roundAsCircle="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/original_user_details_aver"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:text="Johnny"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_background"
                android:clickable="true"
                android:focusable="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"
                    android:clickable="false"
                    android:scaleType="centerCrop"
                    app:actualImageResource="@drawable/ic_like" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:fontFamily="monospace"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/his_likes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/fragmentation_ic_right"
                    android:clickable="false"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_4" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_background"
                android:clickable="true"
                android:focusable="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"
                    android:clickable="false"
                    android:scaleType="centerCrop"
                    app:actualImageResource="@drawable/ic_focus" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:fontFamily="monospace"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/his_focus"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/fragmentation_ic_right"
                    android:clickable="false"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_4" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_36dp">

    </android.support.v7.widget.Toolbar>

</FrameLayout>

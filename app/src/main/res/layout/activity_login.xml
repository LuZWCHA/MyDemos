<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lu.mydemos.view.Login">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:bufferType="spannable"
            android:text="@string/login_toolbar_title"
            android:textAllCaps="false"
            android:textColor="@color/colorLoginText"
            android:textSize="@dimen/dimenTitleSize"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="128dp"
        android:layout_height="128dp"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/defult_head_portrait"
        android:layout_margin="@dimen/toolbar_editor_distance"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_editor_distance">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/editor_left_right_margin"
            android:layout_marginRight="@dimen/editor_left_right_margin"
            android:hint="@string/login_inputview_username"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_editor_distance">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/editor_left_right_margin"
            android:layout_marginRight="@dimen/editor_left_right_margin"
            android:hint="@string/login_inputview_password"/>

    </android.support.design.widget.TextInputLayout>

    <com.lu.mytaskbutton.TaskButton
        android:id="@+id/logintaskbutton"
        android:layout_margin="50dp"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        app:button_textsize="@dimen/dimenTitleSize"
        app:button_text="@string/login_toolbar_title"
        app:button_press_color="@color/colorButtonPress"
        app:button_color="@color/colorAccent"/>

    <com.lu.mydemos.view.BottomBar
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

    </com.lu.mydemos.view.BottomBar>

</LinearLayout>
